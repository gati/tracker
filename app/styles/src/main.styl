@import "reset"
@import "mixins"


html
  overflow-y: scroll
  font-size: 62.5%
  background-color: #cccccc
  background-image: -webkit-gradient(linear, 100% 0%, 0% 100%, 
    from(transparent), 
    color-stop(0.15, transparent),  
    color-stop(0.15, #d2d2d2), 
    color-stop(0.50, #d2d2d2), 
    color-stop(0.50, transparent), 
    color-stop(0.65, transparent),
    color-stop(0.65, #d2d2d2),  
    to(#d2d2d2))
  -webkit-background-size: 50px 50px

.banner
  background: #7d7d7d; /* Old browsers */
  background: -moz-linear-gradient(top, #7d7d7d 0%, #414141 48%, #414141 49%, #383838 99%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#7d7d7d), color-stop(48%,#414141), color-stop(49%,#414141), color-stop(99%,#383838)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #7d7d7d 0%,#414141 48%,#414141 49%,#383838 99%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #7d7d7d 0%,#414141 48%,#414141 49%,#383838 99%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #7d7d7d 0%,#414141 48%,#414141 49%,#383838 99%); /* IE10+ */
  background: linear-gradient(top, #7d7d7d 0%,#414141 48%,#414141 49%,#383838 99%); /* W3C */
  background: linear-gradient(top, #7d7d7d 0%,#414141 48%,#414141 49%,#383838 99%)
  //filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#7d7d7d', endColorstr='#383838',GradientType=0 )
  clear: both
  overflow: hidden
  padding: 8px
  &.show-back
    .header-btn-left
      display:block

.banner .header-btn-left
  background: url("images/back.png") no-repeat scroll 0 0 transparent
  color: #FFFFFF
  display: block
  font-family: Arial
  font-size: 12px
  font-weight: bold
  height: 26px
  margin: 5px
  padding-left: 11px
  padding-top: 8px
  position: absolute
  text-decoration: none
  top: 2px
  width: 41px
  display:none

.banner h3
  color: #FFFFFF
  margin: 0
  text-align: center
  float: left
  width: 100%

.header-btn-right
  position: absolute
  right: 10px

.header-btn-right.home
  height: 23px
  width: 23px
  background: url(images/button_home.png)
  text-indent: -9999px
  margin: 5px

.header-btn-right.plus
  background: #222
  border: solid 1px rgba(79, 79, 79, 0.75)
  border-radius: 8px
  color: #fff
  font-weight: bold
  text-decoration: none
  padding: 6px 9px

.content
  font-family: Helvetica, Arial, sans-serif

.primary-content
  padding: 20px
  line-height: 22px

.logo-nav
  margin: 0px auto
  width: 420px
  margin-top: 20px
  a
    display: block
    height: 225px
    width: 420px
    text-indent: -999px
    &.interactive
      background: url("http://sxsw.com/sites/all/themes/sxsw-2013/imgs/logo-interactive.png") no-repeat
    &.film
      background: url("http://sxsw.com/sites/all/themes/sxsw-2013/imgs/logo-film.png") no-repeat

.table-view
  border: 1px solid #bbb
  border-radius: 14px
  background: #fff
  padding: 0
  margin: 15px 0 0
  list-style: none

.table-view a
  margin: 0px
  padding: 8px 12px
  border: 0px none
  border-bottom: 1px solid #bbb
  border-radius: 0px
  display: block
  text-decoration: none

.table-view:first-child
  margin-top: 0px

.table-view a:last-child
  border-bottom: 0px none

.table-view a.has-children
  background: url("images/bg_rightarrow.png"), url("images/nav_icon_all.png")
  background-repeat: no-repeat, no-repeat
  background-position: 96% 50%, 6px 3px
  padding-left: 38px

.table-view a.has-children.hyatt
  background: url("images/bg_rightarrow.png"), url("images/nav_icon_hyatt.png")
  background-repeat: no-repeat, no-repeat
  background-position: 96% 50%, 6px 3px

.table-view a.has-children.att
  background: url("images/bg_rightarrow.png"), url("images/nav_icon_att.png")
  background-repeat: no-repeat, no-repeat
  background-position: 96% 50%, 6px 3px

.table-view a.has-children.holiday
  background: url("images/bg_rightarrow.png"), url("images/nav_icon_holiday.png")
  background-repeat: no-repeat, no-repeat
  background-position: 96% 50%, 6px 3px

.table-view a.has-children.sheraton
  background: url("images/bg_rightarrow.png"), url("images/nav_icon_sheraton.png")
  background-repeat: no-repeat, no-repeat
  background-position: 96% 50%, 6px 3px

.modalBox
  opacity: .8
  border-radius: 8px
  background: #222
  padding: 10px 20px
  color: #fff
  position: absolute
  font-family: Helvetica, Arial, sans-serif

.modalBox.alert
  width: 70%
  top: 20%
  left: 15%

.modalBox.header
  right: 10px
  top: 41px
  z-index: 9
  display: none
  max-width: 30%

#mapCanvas
  width: 100%
  min-height: 480px
  height: 100%